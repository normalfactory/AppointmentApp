@model EditAlternativeAppointmentViewModel

<div class="mt-4">

    <div class="row">
        <div class="col-12">
            <h3>Suggest Alternative Time</h3>
        </div>
    </div>


    <div class="row">

        <div class="col-12">
            <table class="table mt-5 table-sm">
                <tbody>
                    <tr>
                        <td>Client:</td>
                        <td>@Model.GetClientDisplayName(Model.Appointment.User)</td>
                    </tr>
                    <tr>
                        <td>Patient:</td>
                        <td>@Model.GetPatientDisplayName(Model.Appointment.Animal)</td>
                    </tr>
                    <tr>
                        <td>Appointment Type</td>
                        <td>@Model.Appointment.AppointmentType</td>
                    </tr>
                    <tr>
                        <td>Created Date</td>
                        <td>@Model.GetFormattedDateTime(Model.Appointment.CreateDateTime)</td>
                    </tr>
                    <tr>
                        <td>Requested Time</td>
                        <td>@Model.GetFormattedDateTime(Model.Appointment.RequestedDateTimeOffset)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    <h5 class="mt-5">Propose Alternative Time</h5>
   

    <div class="row">
    
        <form asp-action="EditAlternative" method="post" class="form-horizontal" role="form">

            <div class="col-12">
                <div class="form-group">
                    <input asp-for="Appointment.AlternativeDateTimeOffset" type="datetime-local" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                </div>
                
                <span class="validationText" asp-validation-for="Appointment.AlternativeDateTimeOffset"></span>
            </div>

            <div class="col-12" mt-4>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary mt-4" value="Set Alternate Time" />
                </div>

                <a asp-controller="Appointment" asp-action="Requested">
                    <input type="button" class="btn btn-secondary mt-1" value="Cancel" />
                </a>

            </div>
           

        </form>

    </div>
    
</div>